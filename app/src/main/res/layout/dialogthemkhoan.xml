<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="30dp">

        <TextView
            android:id="@+id/btnTheloai"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingTop="-4dp"
            android:layout_centerInParent="true"
            android:textAlignment="center"
            android:background="#FFB90F"
            android:fontFamily="@font/bungeeregular"
            android:text="THÊM KHOẢN THU"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@android:color/white" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:drawablePadding="10dp"
            android:fontFamily="@font/roboto_regular"
            android:orientation="horizontal">

            <TextView
                android:layout_width="59dp"
                android:layout_height="50dp"
                android:background="@drawable/edt_bocong"
                android:drawableLeft="@drawable/icontutien"
                android:fontFamily="@font/roboto_regular"
                android:padding="10dp"
                android:text="NGÀNH"
                android:textColor="#f5f5f5"
                android:textColorHint="#fff"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spinermaloai"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/edt_bocong"
                android:drawablePadding="10dp"
                android:fontFamily="@font/roboto_regular"
                android:padding="15dp"

                android:spinnerMode="dialog" />
        </LinearLayout>

        <EditText
            android:id="@+id/edttenkhoanthu"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/edt_bocong"
            android:drawableLeft="@drawable/icontien"
            android:drawablePadding="10dp"
            android:fontFamily="@font/roboto_regular"
            android:hint="NHẬP TÊN KHOẢN THU"
            android:layout_marginTop="30dp"
            android:padding="15dp"

            />
        <TextView
            android:id="@+id/edtngay"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/edt_bocong"
            android:drawableLeft="@drawable/icondate"
            android:drawablePadding="10dp"
            android:layout_marginTop="30dp"
            android:padding="15dp"

            />
        <EditText
            android:id="@+id/edttien"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/edt_bocong"
            android:drawableLeft="@drawable/icontienn"
            android:drawablePadding="10dp"
            android:fontFamily="@font/roboto_regular"
            android:hint="NHẬP TIỀN"
            android:layout_marginTop="30dp"
            android:padding="15dp"

            />
        <EditText
            android:id="@+id/edtghichu"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/edt_bocong"
            android:drawableLeft="@drawable/iconghichu"
            android:drawablePadding="10dp"
            android:fontFamily="@font/roboto_regular"
            android:hint="NHẬP GHI CHÚ"
            android:layout_marginTop="30dp"
            android:padding="15dp"

            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/tv_signin"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="20dp"
            android:drawablePadding="10dp"
            android:orientation="horizontal">








            <Button
                android:id="@+id/btnthemkhoanthu"
                android:layout_width="100dp"
                android:layout_height="wrap_content"

                android:layout_marginRight="20dp"
                android:background="#FFB90F"
                android:fontFamily="@font/bungeeregular"
                android:text="THÊM"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btnhuythem"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:background="#000"
                android:fontFamily="@font/bungeeregular"
                android:layout_marginLeft="50dp"
                android:text="HỦY"
                android:textColor="@android:color/white" />




        </LinearLayout>


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>